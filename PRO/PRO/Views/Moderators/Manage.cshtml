@model PRO.Entities.PaginatedList<PRO.Entities.Moderator>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zarządzaj moderatorami</h2>

<p>
    <div class="btn btn-primary"><a class="actionLinkManage" href="/moderators/add">Dodaj nowego</a></div>
    <div class="btn btn-secondary"><a class="actionLinkManage" href="/panel">Powrót</a></div>
</p>
<table class="table">
    <tr>
        <th>
            Użytkownik
        </th>
        <th>
            Data dodania
        </th>
        <th>
            Data ostatniego logowania
        </th>
        <th>
            Aktywny
        </th>
        <th></th>
    </tr>

    @{
        foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @if (!item.LastLoginDate.HasValue)
                    {
                        <text>brak logowania</text>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.LastLoginDate.Value)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.UserId }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.UserId }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.UserId })
                </td>
            </tr>
        }

    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
</table>
<div>
    @{Model.Pagination.Route = "moderators/manage?";}
    <partial name="~/Views/Shared/_Pagination.cshtml" , model="Model.Pagination" />
</div>