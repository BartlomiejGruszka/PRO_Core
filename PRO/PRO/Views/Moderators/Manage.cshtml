@model PRO.Entities.PaginatedList<PRO.Entities.Moderator>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/moderators/manage">Zarządzaj moderatorami</a>
        <button onclick="openButton2()" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02" style=" align-items: start; justify-content: flex-end;">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/moderators/add">
                        Dodaj
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/panel">Powrót</a>
                </li>
            </ul>
            <form asp-action="Manage" method="get" class="d-flex" style="display: flex; align-items: center;">
                <input class="form-control me-sm-2" placeholder="Szukaj" type="text" name="currentFilter" value="@Model.Pagination.CurrentFilter" />
                <button class="btn btn-secondary my-2 my-sm-0" style="margin-left:5px;" type="submit">Szukaj</button>
            </form>
        </div>
    </div>
</nav>
<div class="table-container">
    <table class="table">
        <tr class="tableheadercolor">
            <th>
                <a asp-action="Manage" asp-route-sortOrder="@ViewData["UserSortParm"]" asp-route-currentFilter="@Model.Pagination.CurrentFilter" asp-route-items="@Model.Pagination.PageItems" asp-route-page="@Model.Pagination.PageIndex">Użytkownik</a>
            </th>
            <th>

                <a asp-action="Manage" asp-route-sortOrder="@ViewData["AddDateSortParm"]" asp-route-currentFilter="@Model.Pagination.CurrentFilter" asp-route-items="@Model.Pagination.PageItems" asp-route-page="@Model.Pagination.PageIndex">Data dodania</a>
            </th>
            <th>

                <a asp-action="Manage" asp-route-sortOrder="@ViewData["LoginDateSortParm"]" asp-route-currentFilter="@Model.Pagination.CurrentFilter" asp-route-items="@Model.Pagination.PageItems" asp-route-page="@Model.Pagination.PageIndex">Data logowania</a>
            </th>
            <th>
                Aktywny
            </th>
            <th></th>
        </tr>

        @{
            foreach (var item in Model)
            {

                <tr class="tablerow">
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @if (!item.LastLoginDate.HasValue)
                        {
                            <text>Brak</text>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.LastLoginDate.Value)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.UserId }) |
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.UserId }) |
                        @Html.ActionLink("Usuń", "Delete", new { id = item.UserId })
                    </td>
                </tr>
            }

        }
    </table>
</div>
<div>
    <partial name="~/Views/Shared/_Pagination.cshtml" , model="Model.Pagination" />
</div>
<script>
    function openButton2() {
        var element = document.getElementById("navbarColor02");
        element.classList.toggle("collapse");
    }

</script>
