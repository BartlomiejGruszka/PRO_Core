@model IEnumerable<PRO.Entities.ImageType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zarządzanie rodzajami obrazków</h2>

<p>
    <div class="btn btn-primary"><a class="actionLinkManage" href="/imagetypes/add">Dodaj nowy</a></div>
    <div class="btn btn-secondary"><a class="actionLinkManage" href="/panel">Powrót</a></div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Type)
    </td>
    <td>
        @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
        @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
    </td>
</tr>
    }
    <tr>
        <td></td>
        <td></td>
    </tr>
</table>
<div>
    <ul class="pagination">
        @{
            var first = ViewBag.Pagination.firstPage;
            var current = ViewBag.Pagination.currentPage;
            var previous = ViewBag.Pagination.previousPage;
            var items = ViewBag.Pagination.itemsPerPage;
            var next = ViewBag.Pagination.nextPage;
            var last = ViewBag.Pagination.lastPage;
        }




        @{
            if (@current >= 3)
            {
                <li class="page-item">
                    <a class="page-link" href="/genres/manage?page=@first&items=@items">«</a>
                </li>
            }
            if (@current >= 2 && @previous != @current)
            {
                <li class="page-item">
                    <a class="page-link" href="/genres/manage?page=@previous&items=@items">@previous</a>
                </li>
            }

            <li class="page-item active">
                <a class="page-link" href="/genres/manage?page=@current&items=@items">@current</a>
            </li>

            if (@last > @current)
            {
                <li class="page-item">
                    <a class="page-link" href="/genres/manage?page=@next&items=@items">@next</a>
                </li>
            }

            if (@last > @current + 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/genres/manage?page=@last&items=@items">&raquo;</a>
                </li>
            }
        }
    </ul>
</div>