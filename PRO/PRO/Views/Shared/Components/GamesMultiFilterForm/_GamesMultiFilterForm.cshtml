@model PRO.UI.ViewModels.GameFilterViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="list-title box-shadow">Dodaj nową grę</h2>
<div class="window-background box-shadow p-3">

    @using (Html.BeginForm("MultiFilter", "Games"))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
                @Html.LabelFor(model => model.Platforms, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="selectpicker show-tick" style="max-width:400px;" id="SelectedPlatformsId" name="SelectedPlatformsId" data-live-search="true" title="Wybierz platformę" required>
                        @foreach (var item in Model.Platforms)
                        {
                            if (Model.Platforms.Where(s => s.Id == item.Id).ToList().Any())
                            {
                                <option selected class="active" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }

                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Statuses, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="selectpicker show-tick" style="max-width:400px;" id="SelectedStatusesId" name="SelectedStatusesId" data-live-search="true" title="Wybierz status" required>
                        @foreach (var item in Model.Statuses)
                        {
                            if (Model.Statuses.Where(s => s.Id == item.Id).ToList().Any())
                            {
                                <option selected class="active" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }

                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Genres, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="selectpicker show-tick" style="max-width:400px;" id="SelectedGenresId" name="SelectedGenresId" data-live-search="true" title="Wybierz gatunek" required>
                        @foreach (var item in Model.Genres)
                        {
                            if (Model.Genres.Where(s => s.Id == item.Id).ToList().Any())
                            {
                                <option selected class="active" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }

                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Series, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="selectpicker show-tick" style="max-width:400px;" id="SelectedSeriesId" name="SelectedSeriesId" data-live-search="true" title="Wybierz serię">
                        @foreach (var item in Model.Series)
                        {
                            if (Model.Series.Where(s => s.Id == item.Id).ToList().Any())
                            {
                                <option selected class="active" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }

                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Publishers, "Wydawca", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="selectpicker show-tick" style="max-width:400px;" id="SelectedPublishersId" name="SelectedPublishersId" data-live-search="true" title="Wybierz wydawcę">
                        @foreach (var item in Model.Publishers)
                        {
                            if (Model.Publishers.Where(s => s.Id == item.Id).ToList().Any())
                            {
                                <option selected class="active" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }

                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Developers, "Producent", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="selectpicker show-tick" style="max-width:400px;" id="SelectedDevelopersId" name="SelectedDevelopersId" data-live-search="true" title="Wybierz producenta">
                        @foreach (var item in Model.Developers)
                        {
                            if (Model.Developers.Where(s => s.Id == item.Id).ToList().Any())
                            {
                                <option selected class="active" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }

                        }

                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Languages, "Języki", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="selectpicker show-tick" style="max-width:400px;" id="SelectedLanguagesId" name="SelectedLanguagesId" data-live-search="true" multiple title="Wybierz języki">
                        @foreach (var item in Model.Languages)
                        {
                            if (Model.SelectedLanguagesId.Where(s => s == item.Id).ToList().Any())
                            {
                                <option selected class="active" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }

                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Tags, "Tagi", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="selectpicker show-tick" style="max-width:400px;" id="SelectedTagsId" name="SelectedTagsId" data-live-search="true" multiple title="Wybierz tagi">
                        @foreach (var item in Model.Tags)
                        {
                            if (Model.Tags.Where(s => s.Id == item.Id).ToList().Any())
                            {
                                <option selected class="selected active" value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }


                        }

                    </select>
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Filtruj" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
@section scripts{
<partial name="_ValidationScriptsPartial" />
}
