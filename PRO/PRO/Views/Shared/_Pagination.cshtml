@model PRO.Entities.Pagination
 
<ul class="pagination">
    @{     
        if (Model.PageIndex != 1)
        {
            if (Model.PageIndex > 2)
            {
                <li class="page-item">
                    <a class="page-link" href="/@(Model.Route)page=1&items=@Model.PageItems">«</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link" href="/@(Model.Route)page=@(Model.PageIndex-1)&items=@Model.PageItems">@(Model.PageIndex-1)</a>
            </li>
        }

        <li class="page-item active">
            <a class="page-link" href="/@(Model.Route)page=@(Model.PageIndex)&items=@Model.PageItems">@(Model.PageIndex)</a>
        </li>
        if (Model.TotalPages > Model.PageIndex)
        {
            <li class="page-item">
                <a class="page-link" href="/@(Model.Route)page=@(Model.PageIndex+1)&items=@Model.PageItems">@(Model.PageIndex + 1)</a>
            </li>

            if (Model.TotalPages > Model.PageIndex + 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/@(Model.Route)page=@Model.TotalPages&items=@Model.PageItems">&raquo;</a>
                </li>
            }


        }
    }
</ul>