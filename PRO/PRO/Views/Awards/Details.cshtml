@model PRO.Domain.Entities.Award

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="list-title box-shadow">Szczegóły nagrody</h2>
<div class="window-background box-shadow p-3">
    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Game)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Game.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AwardDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AwardDate)
            </dd>

        </dl>
    </div>
    <hr />
    <p>
        <div class="btn btn-primary"><a class="actionLinkManage" href="/awards/edit/@Model.Id">Edytuj</a></div>
        @if (User.IsInRole("Admin"))
        {
            <a href="/awards/delete/@Model.Id" class="btn btn-secondary">Usuń</a>
        }

        <a href="#" class="btn btn-secondary" onclick="javascript:window.history.back(-1);return false;">Powrót</a>
    </p>
</div>