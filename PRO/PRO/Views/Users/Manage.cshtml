@model PRO.Entities.PaginatedList<PRO.Entities.ApplicationUser>

@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zarządzaj użytkownikami</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        <div class="btn btn-primary"><a class="actionLinkManage" href="/users/add">Dodaj nowego</a></div>
    }
    <div class="btn btn-secondary"><a class="actionLinkManage" href="/panel">Powrót</a></div>
</p>
<table class="table">
    <tr>
        <th>
            Obraz
        </th>
        <th>
            @Html.Label("Nazwa użytkownika")
        </th>
        <th>
            Email
        </th>
        <th>
            Data rejestracji
        </th>
        <th>
            Aktywny
        </th>
        <th>
            Publiczny
        </th>
        <th></th>
    </tr>

    @{ foreach (var item in Model)
        {
            <tr>
                <td>
                    @{if (item.Image != null)
                        {

                            <div style="text-align: center;">
                                <img style="max-height:70px;max-width:70px;" class=" lazyloaded" src="/images/@item.Image.ImagePath">
                            </div>
                        }
                        else
                        { <p>Brak obrazu</p>}
                    }

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPublic)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "ManageDetails", new { id = item.Id })
                    @if (User.IsInRole("Admin"))
                    {<text>|</text>
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id });
                    <text>|</text>
                    @Html.ActionLink("Zmień hasło", "ChangePassword", new { id = item.Id });
                }

                </td>
            </tr>

            /**/
            /**/
        }
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
</table>
<div>
    @{Model.Pagination.Route = "users/manage?";}
    <partial name="~/Views/Shared/_Pagination.cshtml" , model="Model.Pagination" />
</div>