@model PRO.Entities.PaginatedList<PRO.Entities.GameList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zarządzaj grami na listach</h2>

<p>
    <div class="btn btn-primary"><a class="actionLinkManage" href="/gamelists/add">Dodaj nową</a></div>
    <div class="btn btn-secondary"><a class="actionLinkManage" href="/panel">Powrót</a></div>
</p>
<table class="table">
    <tr>
        <th>
            Użytkownik
        </th>
        <th>
            Gra
        </th>
        <th>
            Lista użytkownika
        </th>
        <th>
            Rozegrane godziny
        </th>
        <th>
            Ocena
        </th>
        <th>
            Data dodania
        </th>
        <th>
            Data edycji
        </th>

        <th></th>
    </tr>

    @{ foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserList.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserList.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditedDate)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
</table>
<div>
    @{Model.Pagination.Route = "gamelists/manage?";}
    <partial name="~/Views/Shared/_Pagination.cshtml" , model="Model.Pagination" />
</div>