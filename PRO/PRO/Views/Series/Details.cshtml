@model PRO.Entities.Series

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Szczegóły serii</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Gry w serii
        </dt>

        <dd>
            @foreach (var item in Model.Games)
            {
                @Html.DisplayFor(model => item.Title) <br />
            }
            @if (Model.Games.Count() == 0) { <p>Brak gier w serii</p>}

        </dd>
    </dl>
</div>
<p>
    <div class="btn btn-primary"><a class="actionLinkManage" href="/series/edit/@Model.Id">Edytuj</a></div>
    <a href="#" class="btn btn-secondary" onclick="javascript:window.history.back(-1);return false;">Powrót</a>
</p>
