@model PRO.Domain.Entities.Series

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="list-title box-shadow">Szczegóły serii</h2>
<div class="window-background box-shadow p-3">
    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                Gry w serii
            </dt>

            <dd>
                @foreach (var item in Model.Games)
                {
                    @Html.DisplayFor(model => item.Title) <br />
                }
                @if (Model.Games.Count() == 0)
                {<p>Brak gier w serii</p>}

            </dd>
        </dl>

    </div>
    <hr />
    <p>
        <div class="btn btn-primary"><a class="actionLinkManage" href="/series/edit/@Model.Id">Edytuj</a></div>
        <a href="/series/delete/@Model.Id" class="btn btn-secondary">Usuń</a>
        <a href="#" class="btn btn-secondary" onclick="javascript:window.history.back(-1);return false;">Powrót</a>
    </p>
</div>