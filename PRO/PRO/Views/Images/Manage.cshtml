@model PRO.Entities.PaginatedList< PRO.Entities.Image>

@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zarządzaj obrazami</h2>

<p>
    <div class="btn btn-primary"><a class="actionLinkManage" href="/images/add">Dodaj nowy</a></div>
    <div class="btn btn-secondary"><a class="actionLinkManage" href="/panel">Powrót</a></div>
</p>
<table class="table">
    <tr>
        <th>
            <label>Obraz</label>
        </th>
        <th>
            Nazwa
        </th>
        <th>
            <label>Scieżka</label>
        </th>
        <th>
           Rodzaj obrazka
        </th>
        <th>

        </th>
    </tr>

    @{ foreach (var item in Model)
        {
            <tr>
                <td>
                    <div style="text-align: center;">
                        <img style="max-height:200px;max-width:100px;" class="img" alt="myimage" src="@item.ImagePath">
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageType.Name)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "EditFile", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
                    @if (@User.IsInRole("Admin"))
                    {<text>|</text>
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                }
                </td>
            </tr>
        }
    }
<tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
</tr>
</table>
<div>
    <partial name="~/Views/Shared/_Pagination.cshtml" , model="Model.Pagination" />
</div>