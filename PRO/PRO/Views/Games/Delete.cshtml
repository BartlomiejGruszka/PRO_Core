@model PRO.Entities.Game

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuń grę</h2>

<h3>Czy na pewno chcesz usunąć tę grę?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.Raw(@Model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @if (Model.ReleaseDate != null)
            {
                @Html.DisplayFor(model => model.ReleaseDate)

            }
            else
            { <p>Brak daty</p>}
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Platform)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Platform.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Series)
        </dt>

        <dd>
            @if (Model.Series != null)
            {
                @Html.DisplayFor(model => model.Series.Name)

            }
            else
            { <p>Brak serii</p>}
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            @if (Model.Image != null)
            {<img style="max-width:500px;width: expression(this.width > 500 ? 500: true);" class=" lazyloaded" src="/images/@Model.Image.ImagePath">

            }
            else
            { <p>Brak obrazu</p>}

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PublisherCompany)
        </dt>

        <dd>
            @if (Model.PublisherCompany != null)
            {
                @Html.DisplayFor(model => model.PublisherCompany.Name)

            }
            else
            { <p>Brak wydawcy</p>}

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeveloperCompany)
        </dt>

        <dd>
            @if (Model.DeveloperCompany != null)
            {
                @Html.DisplayFor(model => model.DeveloperCompany.Name)

            }
            else
            { <p>Brak producenta</p>}
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-primary" />
            <a href="#" class="btn btn-secondary" onclick="javascript:window.history.back(-1);return false;">Powrót</a>
        </div>
    }
</div>
