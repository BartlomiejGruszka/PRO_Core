@model PRO.Entities.PaginatedList<PRO.Entities.Game>

@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/games/manage">Zarządzaj grami</a>
        <button onclick="openButton2()" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02" style=" align-items: start; justify-content: flex-end;">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/games/add">
                        Dodaj
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/panel">Powrót</a>
                </li>
            </ul>
            <form asp-action="Manage" method="get" class="d-flex" style="display: flex; align-items: center;">
                <input class="form-control me-sm-2" placeholder="Szukaj" type="text" name="currentFilter" value="@Model.Pagination.CurrentFilter" />
                <button class="btn btn-secondary my-2 my-sm-0" style="margin-left:5px;" type="submit">Szukaj</button>
            </form>
        </div>
    </div>
</nav>
<div class="table-container">
    <table class="table">
        <tr class="tableheadercolor">
            <th>

                <a asp-action="Manage" asp-route-sortOrder="@ViewData["TitleSortParm"]" asp-route-currentFilter="@Model.Pagination.CurrentFilter" asp-route-items="@Model.Pagination.PageItems" asp-route-page="@Model.Pagination.PageIndex">Tytuł</a>
            </th>
            <th>

                <a asp-action="Manage" asp-route-sortOrder="@ViewData["PlatformSortParm"]" asp-route-currentFilter="@Model.Pagination.CurrentFilter" asp-route-items="@Model.Pagination.PageItems" asp-route-page="@Model.Pagination.PageIndex">Platforma</a>
            </th>
            <th>

                <a asp-action="Manage" asp-route-sortOrder="@ViewData["StatusSortParm"]" asp-route-currentFilter="@Model.Pagination.CurrentFilter" asp-route-items="@Model.Pagination.PageItems" asp-route-page="@Model.Pagination.PageIndex">Status</a>
            </th>
            <th>

                <a asp-action="Manage" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@Model.Pagination.CurrentFilter" asp-route-items="@Model.Pagination.PageItems" asp-route-page="@Model.Pagination.PageIndex">Data wydania</a>
            </th>
            <th>

                <a asp-action="Manage" asp-route-sortOrder="@ViewData["GenreSortParm"]" asp-route-currentFilter="@Model.Pagination.CurrentFilter" asp-route-items="@Model.Pagination.PageItems" asp-route-page="@Model.Pagination.PageIndex">Gatunek</a>
            </th>
            <th>
                Producent
            </th>
            <th>
                Wydawca
            </th>
            <th>
                Seria
            </th>
            <th>
                Dostępna
            </th>
            <th></th>
        </tr>

        @{foreach (var item in Model)
            {
                <tr class="tablerow">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Platform.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Name)
                    </td>

                    <td>
                        @if (item.ReleaseDate != null)
                        {
                            @Html.DisplayFor(modelItem => item.ReleaseDate)

                        }
                        else
                        { <p>Brak</p>}
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.Name)
                    </td>
                    <td>
                        @if (item.DeveloperCompany != null)
                        {
                            @Html.DisplayFor(modelItem => item.DeveloperCompany.Name)

                        }
                        else
                        { <p>Brak</p>}
                    </td>

                    <td>
                        @if (item.PublisherCompany != null)
                        {
                            @Html.DisplayFor(modelItem => item.PublisherCompany.Name)

                        }
                        else
                        { <p>Brak</p>}
                    </td>
                    <td>
                        @if (item.Series != null)
                        {
                            @Html.DisplayFor(modelItem => item.Series.Name)

                        }
                        else
                        { <p>Brak</p>}
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Szczegóły", "ManageDetails", new { id = item.Id }) @if (@User.IsInRole("Admin"))
                        {<text>|</text>
                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                    }
                    </td>
                </tr>
            }
        }
    </table>
</div>

<div>
    <partial name="~/Views/Shared/_Pagination.cshtml" , model="Model.Pagination" />
</div>
<script>
    function openButton2() {
        var element = document.getElementById("navbarColor02");
        element.classList.toggle("collapse");
    }

</script>