@model PRO.UI.ViewModels.GameDetailsViewModel
@{
    ViewBag.Title = "Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="~/Views/Shared/_GameTitleBar.cshtml" , model="Model.GameInfo.Game" />
<div id="content" class="userprofilecontent box-shadow window-background">

    <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tbody>
            <tr>
                <partial name="~/Views/Shared/_GameInfoBar.cshtml" , model="Model.GameInfo" />
                <td valign="top" style="padding-left: 5px;">
                    <div class="js-scrollfix-bottom-rel">
                        <div style=" margin:0 auto"></div><a name="lower"></a>

                        <table border="0" cellspacing="0" cellpadding="0" width="100%">
                            <tbody>
                                <tr>
                                    <td class="pb24">
                                        @{

                                            var revid = Model.ReviewPlaytimes.Select(s => s.Review?.Id).FirstOrDefault();
                                            if (revid.HasValue && revid.Value > 0)
                                            {
                                                <div class="underlined_h2">
                                                    <text class="">Edytuj recenzję</text>

                                                </div>
                                            }
                                            else
                                            {
                                                <div class="underlined_h2">
                                                    <text class="">Napisz recenzję</text>

                                                </div>
                                            }
                                        }

                                        @await Component.InvokeAsync("UserReview", new { gameid = Model.GameInfo.Game.Id, reviewid = revid })



                                    </td>
                                </tr>

                            </tbody>

                        </table>
                    </div>
                    <div>
                    </div>
                </td>
            </tr>
        </tbody>

    </table>

</div>

