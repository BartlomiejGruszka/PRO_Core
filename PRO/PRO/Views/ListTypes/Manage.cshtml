@model PRO.Entities.PaginatedList<PRO.Entities.ListType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zarządzaj rodzajami list</h2>

<p>
    <div class="btn btn-primary"><a class="actionLinkManage" href="/listtypes/add">Dodaj nowy</a></div>
    <div class="btn btn-secondary"><a class="actionLinkManage" href="/panel">Powrót</a></div>
</p>
<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th></th>
    </tr>

    @{ foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
    <tr>
        <td></td>
        <td></td>
    </tr>
</table>
<div>
    @{Model.Pagination.Route = "listtypes/manage?";}
    <partial name="~/Views/Shared/_Pagination.cshtml" , model="Model.Pagination" />
</div>