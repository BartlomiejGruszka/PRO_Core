@model PRO.Entities.PaginatedList<PRO.Entities.Genre>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/genres/manage">Zarządzaj gatunkami</a>
        <button onclick="openButton2()" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02" style=" align-items: start; justify-content: flex-end;">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/genres/add">
                        Dodaj
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="window.history.go(-1); return false;">Powrót</a>
                </li>
            </ul>


            @using (Html.BeginForm("Manage", "Genres", FormMethod.Get, new { style = "display:flex;" }))
            {
                <form class="d-flex" style=" align-items: center;">
                    <input class="form-control me-sm-2" type="text" placeholder="Szukaj" name="query">
                    <button class="btn btn-secondary my-2 my-sm-0" style="margin-left:5px;" type="submit">Szukaj</button>
                </form>
            }

        </div>
    </div>
</nav>
<table class="table">
    <tr style="        background-color: #e9ecef;">
        <th style="width:70%;">
            <a asp-action="Manage" asp-route-sortOrder="@ViewData["NameSortParm"]">Nazwa</a>
        </th>
        <th style="width:30%;">
            Opcje
        </th>
    </tr>

    @{ foreach (var item in Model)
        {
            <tr class="tablerow">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="float:right; margin-right:10px;">
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
                    @if (@User.IsInRole("Admin"))
                    {<text>|</text>
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                }
                </td>
            </tr>
        }
    }
</table>
<div>
    @if(String.IsNullOrEmpty(Model.Pagination.Route)) {Model.Pagination.Route = "genres/manage?";}
    <partial name="~/Views/Shared/_Pagination.cshtml" , model="Model.Pagination" />
</div>
<script>
    function openButton2() {
        var element = document.getElementById("navbarColor02");
        element.classList.toggle("collapse");
    }

</script>