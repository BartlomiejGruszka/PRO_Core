@page "/Login"
@model LoginModel
    <div class="">
        <div class="login-form-row">
            <section id="loginForm" class="window-background box-shadow p-5">
                <form id="account" method="post" >
                    <h4>Zaloguj się</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <div class="col-md-12" style="padding-left:0px;">
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <div class="col-md-12" style="padding-left:0px;">
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12" style="padding-left:0px;">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    Zapamiętaj mnie?
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Zaloguj</button>

                        <a asp-page="./Register" class="btn btn-secondary" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj</a>


                    </div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                    </p>
                </form>
            </section>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
